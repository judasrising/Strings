#include<stdio.h>
#define N 30

int letter_count(char str[])
{
    int count=0,i;
    for(i=0; str[i]!='\0'; i++)
        if(str[i]!=' ')
           count++;
    return count;
}

int main()
{
    char msg[N];
    printf("Enter your message: ");
    gets(msg);

    printf("You have entered %d letters.",letter_count(msg));
}


/********************************** Whole Program With Pointers *************************

#include<stdio.h>
#define N 70

void read(char *s,int n)
{
    char ch;
    int i=0;
    while((ch=getchar())!='\n' && i<n){
        s[i]=ch;
        i++;
    }
    s[++i]='\0';
}

int letter_count(char str[])
{
    int i=0,count=0;
    for(; str[i]!='\0'; i++){
        if(str[i]!=' ')
            count++;
    }
    return count;
}


int main()
{
    char ch[N];
    printf("Enter your message: ");
    read(ch,N);
    printf("%d letters",letter_count(ch));
}

*********************************************************/
