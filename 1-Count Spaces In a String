int count_spaces(char str[])
{
    int count=0,i;

    for(i=0; str[i]!='\0'; i++){
        if(str[i]==' ')
            count++;
    }
    return count;
}
int main()
{
    char ch[N];
    printf("Enter your message: ");
    gets(ch);

    printf("There are %d spaces in your message.",count_spaces(ch));
}
