#ifdef _MSC_VER
#define _CRT_SECURE_NO_WARNINGS
#endif
#include<stdio.h>
#include<string.h>
#define N 30

void acronym(char msg[])
{
	if (msg[0] >= 65 && msg[0] <= 90)
		printf("%c", msg[0]);
	else if (msg[0] >= 90 && msg[0] <= 122)
		printf("%c", msg[0] - 32);
	int i;
	for (i=0; msg[i] != '\0'; i++) {
		if (msg[i] == ' ') {
			if (msg[i+1] >= 65 && msg[i+1] <= 90)
				printf("%c", msg[i+1]);
			else if (msg[i+1] >= 90 && msg[i+1] <= 122)
				printf("%c", msg[i+1] - 32);
		}
	}
}
int main()
{
	char str[N+1];
	printf("Enter your message: ");
	gets(str);
	acronym(str);
	getch();
}
